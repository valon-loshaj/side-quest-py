FROM node:20-slim

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Install dependencies
COPY package.json ./
RUN pnpm install

# Copy the rest of the application
COPY . .

# Expose the port
EXPOSE 3000

# Start the development server with host flag to allow external connections
CMD ["pnpm", "dev", "--host", "0.0.0.0"] 