# Flask application environment
# Options: development, testing, production
FLASK_ENV=development

# Secret key for sessions and security
SECRET_KEY=your_secret_key_here

# Development database connection string
# SQLite example: sqlite:///path/to/dev.db
# PostgreSQL example: postgresql://username:password@localhost:5432/dev_db
DATABASE_URL=sqlite:///instance/side_quest_dev.db

# Testing database connection string
# Using in-memory SQLite is recommended for tests
TEST_DATABASE_URL=sqlite:///instance/side_quest_test.db

# Production database connection string
# PostgreSQL example: postgresql://username:password@hostname:5432/prod_db
# PRODUCTION_DATABASE_URL=postgresql://username:password@hostname:5432/side_quest

# Set to False in production
FLASK_DEBUG=True

# SQLAlchemy settings
SQLALCHEMY_TRACK_MODIFICATIONS=False
